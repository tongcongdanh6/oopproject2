@using DOANLTHDT_1988216.Controllers
@using DOANLTHDT_1988216.Entities

@{
    Layout = "_Layout.cshtml";
    Page.Title = "Xóa hóa đơn nhập hàng";

    c_HoaDonBanHang c_hd = new c_HoaDonBanHang();

    // Khởi tạo các biến cần thiết
    HoaDonBanHang curHD = null;
    string message = "";

    if (!String.IsNullOrEmpty(Request["id"]))
    {
        curHD = c_hd.getHoaDonById(Request["id"]);

        if (curHD == null)
        { message = "Không tìm thấy hóa đơn bán hàng này để xóa"; }
        else
        {
            message = "Bạn có thực sự muốn xóa hóa đơn bán hàng <b>" + curHD.MA_HOA_DON + "</b>";
        }


        // Nếu submit dữ liệu
        if (IsPost)
        {
            if (c_hd.xoaHoaDon(Request["id"]))
            {
                message = "Xóa thành công";
                Response.Redirect("~/Views/v_DanhSachHoaDonBanHang.cshtml");
            }
            else
            {
                message = "Xóa THẤT BẠI";
            }
        }
    }
    else
    {
        message = "Vui lòng chọn hóa đơn bán hàng cần xóa";
    }
}

<div>
    @{ if (curHD != null)
        {
            <form action="~/Views/v_XoaHoaDonBanHang.cshtml?id=@curHD.MA_HOA_DON" method="post">
                <button class="btn btn-primary" type="submit">Xóa</button>
            </form>
        }}
    @{
        if (!String.IsNullOrEmpty(message))
        {
            <div class="alert alert-info">@Html.Raw(message)</div>
        }
    }
</div>
